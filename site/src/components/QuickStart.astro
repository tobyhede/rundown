---
import RunbookDemo from './RunbookDemo.astro';

const installCommand = 'npm install -g @rundown/cli';
---

<section id="quickstart" class="py-24 px-4">
  <div class="container mx-auto max-w-5xl">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-16">
      <span class="text-primary">Quick Start</span>
    </h2>

    <!-- Install -->
    <div class="mb-12">
      <p class="text-muted-foreground mb-2">Install the CLI:</p>
      <div class="border rounded-lg p-4 bg-card overflow-x-auto">
        <code class="text-foreground font-semibold">{installCommand}</code>
      </div>
    </div>

    <!-- Demo -->
    <div>
      <p class="text-gray-400 mb-4">See it in action:</p>
      <RunbookDemo />
    </div>
  </div>
</section>
