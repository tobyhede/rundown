---
const githubUrl = 'https://github.com/tobyhede/rundown';
const quickstartUrl = 'https://github.com/tobyhede/rundown#get-started';
---

<section class="flex flex-col items-center justify-center text-center px-4 py-12">
  <div class="mb-8">
    <img
      src="/logo.png"
      alt="Rundown Logo"
      class="w-80 h-80 md:w-96 md:h-96 lg:w-[460px] lg:h-[460px] rounded-2xl shadow-neon-purple"
    />
  </div>

  <h1 class="sr-only">Rundown</h1>

  <p class="text-2xl md:text-3xl text-gray-200 mb-3 max-w-3xl">
    Executable Runbooks from Markdown
  </p>

  <p class="text-lg text-gray-400 mb-8 max-w-2xl">
    Enforce process. Track progress. Resume anytime.
  </p>

  <div class="flex flex-col sm:flex-row gap-4">
    <a
      href={quickstartUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="px-8 py-3 bg-cyber-cyan text-cyber-dark font-bold rounded-lg hover:shadow-neon-cyan transition-shadow"
    >
      Get Started
    </a>
    <a
      href={githubUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="px-8 py-3 border border-cyber-magenta text-cyber-magenta font-bold rounded-lg hover:shadow-neon-magenta transition-shadow"
    >
      GitHub
    </a>
    <a
      href="/patterns"
      class="px-8 py-3 border border-cyber-magenta text-cyber-magenta font-bold rounded-lg hover:shadow-neon-magenta transition-shadow"
    >
      Explore
    </a>
  </div>

  <!-- Install snippet -->
  <div class="mt-6 w-full max-w-md">
    <div class="flex items-center justify-between bg-cyber-darker border border-cyber-cyan/20 rounded-lg px-4 py-3">
      <code class="text-gray-300 font-mono text-sm">
        <span class="text-gray-500">‚ùØ</span> npm install -g @rundown/cli
      </code>
      <button
        id="copy-install-btn"
        class="text-gray-400 hover:text-cyber-cyan transition-colors ml-4"
        title="Copy to clipboard"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
        </svg>
      </button>
    </div>
  </div>
</section>

<script>
  document.getElementById('copy-install-btn')?.addEventListener('click', async () => {
    await navigator.clipboard.writeText('npm install -g @rundown/cli');
    const btn = document.getElementById('copy-install-btn');
    if (btn) {
      btn.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-cyber-cyan" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
      </svg>`;
      setTimeout(() => {
        btn.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
        </svg>`;
      }, 2000);
    }
  });
</script>
