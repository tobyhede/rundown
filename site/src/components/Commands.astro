---
const commands = [
  { cmd: 'rundown run <file>', desc: 'Start a runbook' },
  { cmd: 'rundown pass', desc: 'Mark current step as passed' },
  { cmd: 'rundown fail', desc: 'Mark current step as failed' },
  { cmd: 'rundown goto <n>', desc: 'Jump to step number' },
  { cmd: 'rundown status', desc: 'Show current state' },
  { cmd: 'rundown stop', desc: 'Abort runbook' },
  { cmd: 'rundown complete', desc: 'Mark runbook complete' },
  { cmd: 'rundown stash', desc: 'Pause enforcement' },
  { cmd: 'rundown pop', desc: 'Resume enforcement' },
  { cmd: 'rundown ls', desc: 'List active runbooks' },
  { cmd: 'rundown check <file>', desc: 'Validate runbook file' },
];
---

<section id="commands" class="py-24 px-4">
  <div class="container mx-auto max-w-4xl">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">
      <span class="text-primary">Commands</span>
    </h2>
    <p class="text-center text-muted-foreground mb-12">
      <code class="text-primary">rd</code> is an alias for <code class="text-primary">rundown</code>
    </p>

    <div class="border rounded-xl bg-card overflow-hidden">
      <table class="w-full">
        <tbody>
          {commands.map((item, i) => (
            <tr class={i % 2 === 0 ? 'bg-muted/50' : ''}>
              <td class="px-4 py-3 font-mono text-foreground text-sm">
                {item.cmd}
              </td>
              <td class="px-4 py-3 text-gray-400 text-sm">
                {item.desc}
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>
</section>
